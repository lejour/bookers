<h1>Books</h1>

<div class="book_box">
  <h4>Title</h4>
  <h4>Body</h4>
  <% @books.each do |book| %>
  <div class=book_body>
    <span><%= book.title %></span>
    <span><%= book.body %></span>
    <span><%= link_to 'Show', book_path(book.id) %></span>
    <span><%= link_to 'Edit', edit_book_path(book.id) %></span>
  </div>
  <% end %>
</div>


<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <h4>
  <%= f.submit 'Create Book' %>
  </h4>
<% end %>
