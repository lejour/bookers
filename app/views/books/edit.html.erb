<h1>Editing Book</h1>
<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
  <div class="box">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="box">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <div class="box">
    <h4>
    <%= f.submit 'Update Book' %>
    </h4>
  </div>

<% end %>
<%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', "/books" %>